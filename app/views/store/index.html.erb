<h1>Cars list</h1>
<p id="notice"><%= notice %></p>

<%= form_tag(store_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search1, params[:search1], placeholder: "Search Style" %>
    <%= text_field_tag :search2, params[:search2], placeholder: "Search Model" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

